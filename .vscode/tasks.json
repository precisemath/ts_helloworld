{
	"version": "2.0.0",
	"tasks": [
		{
			//"type": "typescript",
			"type": "shell",
			//"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json",
			"command": "tsc",
			"args": ["-p", "${workspaceFolder}\tsconfig.json"],
			"windows": {
				"command": "tsc.cmd",
				"args": ["-p", "${workspaceFolder}\\tsconfig.json"]
			}
		}
	]
}